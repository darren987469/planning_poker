<div class="container mx-auto">
  <div>
    <h1>Games</h1>
    <hr>
    <%= link_to 'Add a new game', new_game_path %>
    <p id="notice"><%= notice %></p>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>URL</th>
        <th></th>
      </tr>
    </thead>
    <% @games.each do |game| %>
    <tbody>
      <tr>
        <td><%= game.name %></td>
        <td> <%= link_to(game_url(game.code), game_url(game.code)) %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>
